<% provide(:title, "Article Logs") %>

<h2>Article Logs</h2>

<%= form_tag({ controller: 'article_logs', action: 'diff' }, { method: :get }) do %>

    <table class="table table-striped">
      <tr>
        <td>L</td>
        <td>R</td>
        <th>Title</th>
        <th>Updated date</th>
      </tr>
      <% @article_logs.order("created_at").reverse_order.each_with_index do |article_logs, i| %>
        <tr>
          <td><%= radio_button_tag 'id1', article_logs.id, nil, {checked: (i == 0) } %></td>
          <td><%= radio_button_tag 'id2', article_logs.id, nil, {checked: (i == 0) } %></td>
          <td>
            <%= link_to article_log_path(article_logs) do %>
              <%= truncate(article_logs.title, length: 30) %>
            <% end %>
          </td>
          <td>
            <%= link_to article_log_path(article_logs) do %>
              <%= format_time article_logs.created_at %>
            <% end %>
          </td>
      <% end %>
    </table>

    <%= submit_tag 'Diff', class: "btn bnt-xs btn-primary" %>

<% end %>
