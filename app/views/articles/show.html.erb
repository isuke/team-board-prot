<% provide(:title, @article.title) %>

<h2><%= @article.title%></h2>

<%= link_to "Edit"     , edit_article_path(@article), class: "btn bnt-xs btn-primary" %>
<% if @article.logs.length > 1 %>
  <%= link_to "History",
              diff_articles_path(id1: @article.latest_log.prev,
                                 id2: @article.latest_log),
              class: "btn bnt-xs btn-defalut" %>
  <%= link_to "Show Logs", article_logs_path(@article), class: "btn bnt-xs btn-defalut" %>
<% end %>
<%= link_to "Delete"   , @article                   , class: "btn bnt-xs btn-warning",
            method: :delete, data: { confirm: "You sure?" } %>

<hr>

<p><%= markdown @article.content %></p>

