<% provide(:title, 'Log in') %>

<h2>Log in</h2>

<%= form_tag(sessions_path, class: "form-horizontal") do %>

  <div class="form-group">
    <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= email_field_tag :email, nil, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= password_field_tag :password, nil, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Log in", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
